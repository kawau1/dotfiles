{
    "context": {
        "fileName": "AGENTS.md"
    },
    "mcpServers": {
        "Context7": {
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp@latest"]
        }
    },
    "tools": {
        "autoAccept": true,
        "exclude": [
            "ReadFileTool(./.env)",
            "ReadFileTool(./.env.*)",
            "ReadFileTool(./secrets/**)",
            "ReadFileTool(./config/credentials.json)",
            "ReadFileTool(./build)",
            "ReadFileTool(.ssh)",
            "ReadFileTool(id_rsa)",
            "ReadFileTool(id_ed25519)",
            "ReadFileTool(**/*token*)",
            "ReadFileTool(**/*key*)",
            "ShellTool(sudo *)",
            "ShellTool(rm *)",
            "ShellTool(rm -rf *)",
            "ShellTool(git push *)",
            "ShellTool(git commit *)",
            "ShellTool(git reset *)",
            "ShellTool(git rebase *)",
            "WriteFileTool(.env*)",
            "WriteFileTool(**/secrets/**)"
        ]
    },
    "general": {
        "checkpointing": {
            "enabled": true
        }
    },
    "ui": {
        "hideFooter": false,
        "showMemoryUsage": true,
        "showLineNumbers": true,
        "theme": "Default"
    },
    "ide": {
        "enabled": true
    },
    "security": {
        "auth": {
            "selectedType": "oauth-personal"
        }
    }
}
